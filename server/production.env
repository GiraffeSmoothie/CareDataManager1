NODE_ENV=production
PORT=3000
DOCUMENTS_ROOT_PATH="./uploads"

# JWT Configuration
JWT_SECRET=care-data-manager-super-secure-jwt-secret-2024-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin User Setup Configuration - SECURITY CRITICAL
# ALWAYS set to 'false' in production environments
AUTO_CREATE_ADMIN=false
# These should NOT be set in production - use create-admin.js script instead
INITIAL_ADMIN_USERNAME=
INITIAL_ADMIN_PASSWORD=
# Set to 'true' to require password change on first login
FORCE_PASSWORD_CHANGE_ON_FIRST_LOGIN=true

# Azure Blob Storage Configuration
# Primary: Use managed identity with storage account name (recommended for Azure App Service)
AZURE_STORAGE_ACCOUNT_NAME=ptahhomecareappsvcupload/caretrackauaestrgacct 
AZURE_STORAGE_CONTAINER_NAME=documentsroot

# Security Headers and Settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Azure PostgreSQL Configuration with Managed Identity
# These should be set in Azure App Service Configuration, not in this file
# AZURE_POSTGRESQL_SERVER_NAME=your-postgresql-server-name
# AZURE_POSTGRESQL_DATABASE_NAME=your-database-name  
# AZURE_POSTGRESQL_USER_NAME=your-app-service-name

# Do NOT set DATABASE_URL when using managed identity - it will be ignored
# DATABASE_URL= (leave commented out for managed identity)