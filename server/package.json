{
  "name": "care-data-manager-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "prebuild": "npm install -g esbuild",
    "build": "cross-env NODE_ENV=production esbuild index.ts --platform=node --bundle --format=esm --outdir=dist --packages=external --external:fs --external:path --external:url --external:crypto --external:vite --external:./vite",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "postbuild": "node copy-migrations.js"
  },
  "dependencies": {
    "@azure/identity": "^4.10.0",
    "@azure/storage-blob": "^12.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.15.5",
    "vite": "^5.4.14",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "tsx": "^4.19.4"
  }
}
