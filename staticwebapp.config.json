{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/assets/*"]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-eval' 'unsafe-inline' data: https:; object-src 'none'",
    "cache-control": "no-cache",
    "X-Content-Type-Options": "nosniff"
  },
  "mimeTypes": {
    ".html": "text/html",
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".css": "text/css",
    ".json": "application/json",
    ".map": "application/json",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".gif": "image/gif",
    ".svg": "image/svg+xml",
    ".ico": "image/x-icon",
    ".txt": "text/plain"
  },
  "routes": [
    {
      "route": "/assets/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.js",
      "headers": {
        "content-type": "application/javascript; charset=utf-8"
      }
    },
    {
      "route": "/*.mjs",
      "headers": {
        "content-type": "application/javascript; charset=utf-8"
      }
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "route": "/*",
      "rewrite": "/index.html",
      "statusCode": 200
    }
  ],
  "platform": {
    "apiRuntime": "node:18"
  }
}